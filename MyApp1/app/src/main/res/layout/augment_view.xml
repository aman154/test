<merge
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tab_bg"
    >

    <ImageView
        android:id="@+id/augment_icon_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/augment_tittle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/movie_name"
        android:layout_toRightOf="@+id/augment_icon_image"/>

    <TextView
        android:id="@+id/augment_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail"
        android:textSize="15sp"
        android:layout_below="@+id/augment_tittle_tv"
        android:layout_toRightOf="@+id/augment_icon_image"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/augment_timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_below="@+id/augment_detail_tv"
        android:layout_toRightOf="@+id/augment_icon_image"
        android:layout_marginTop="5dp"
        android:text="timer"
        />

</merge>
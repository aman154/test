<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_square_bottom_line_thin_3"
    android:paddingLeft="30dp" android:paddingRight="30dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp">


   <CheckBox
       android:id="@+id/promo_code_selected_cb"
       android:layout_width="25dp"
       android:layout_height="25dp" />

        <LinearLayout
            android:id="@+id/promo_code_value_ll"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/edittext_bg1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/promo_code_value_tv"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="Rs. 100 off"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
        <TextView
            android:id="@+id/promo_code_type_tv"
            android:layout_marginLeft="-10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/bg1"
            android:textSize="12sp"
            android:text="cashback"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/promo_code_description_ll"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/promo_code_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get flat 100 cashback "/>
        <TextView
            android:id="@+id/promo_code_validity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valid till 30 sept 15"/>
        </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.RegisterKeypadFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_add_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add Note"
            android:textSize="16sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:clickable="true"
            android:background="@drawable/default_touch_effect"/>
        <TextView
            android:id="@+id/reg_amount_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#949292"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="right|end"
            android:hint="$ 0.00"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/layout_top_single_line_drawable">

        <TextView
            android:id="@+id/reg_keypad_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="1"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="2"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="3"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/layout_top_single_line_drawable">

        <TextView
            android:id="@+id/reg_keypad_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="4"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="5"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="6"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/layout_top_single_line_drawable">

        <TextView
            android:id="@+id/reg_keypad_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="7"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="8"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="9"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/layout_top_single_line_drawable">

        <TextView
            android:id="@+id/reg_keypad_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="36sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="normal"
            android:text="c"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="34sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="0"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
        <TextView
            android:id="@+id/reg_keypad_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="34sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="normal"
            android:text="+"
            android:clickable="true"
            android:background="@drawable/keypad_touch_effect"/>
    </LinearLayout>
</LinearLayout>

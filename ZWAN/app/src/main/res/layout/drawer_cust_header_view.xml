<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/drawer_items_breaker_drawable"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.example.aman.zwan.customviews.rounded_imageview.RoundedImageView
        android:id="@+id/cust_profile_image_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_cust"
        android:layout_gravity="top"
        android:layout_marginTop="15dp"
        android:scaleType="centerInside"
        app:riv_corner_radius="90dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/colorPrimaryDark"
        app:riv_mutate_background="false"
        app:riv_tile_mode="clamp"
        app:riv_oval="false"/>


    <TextView
        android:id="@+id/cust_profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/roboto_bold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_below="@+id/cust_profile_image_iv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:lines="1"
        android:text="Name"
        />

    <TextView
        android:id="@+id/cust_profile_mob_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/roboto_regular"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_below="@+id/cust_profile_name_tv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:text="0000000000"
        android:layout_marginBottom="10dp"/>


    <ImageView
        android:id="@+id/cust_edit_profile_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_mode_edit"
        android:layout_toRightOf="@+id/cust_profile_mob_tv"
        android:layout_below="@+id/cust_profile_name_tv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="60dp"/>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aman.zwan.activities.CustomerProfile">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/draw_main_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

            <RelativeLayout
                android:layout_below="@+id/toolbar"
                android:id="@+id/cust_profile_rl"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >

                <TextView
                    android:id="@+id/profile_tv"
                    android:text="Profile"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_below="@+id/profile_tv"
                    android:id="@+id/name_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_profile_item_background_drawable"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cust_profile_name"
                        android:text="Name"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_profile_tittle_background_drawable"/>

                    <EditText
                        android:id="@+id/cust_profile_name_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Name"
                        android:background="@null"
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:lines="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/name_ll"
                    android:id="@+id/mobile_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_profile_item_background_drawable"
                    android:layout_margin="5dp">

                    <TextView
                        android:textSize="18sp"
                        android:id="@+id/cust_profile_mobile"
                        android:text="Mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_marginLeft="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_profile_tittle_background_drawable"/>

                    <EditText
                        android:id="@+id/cust_profile_mobile_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="mobile"
                        android:inputType="number"
                        android:background="@null"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:lines="1"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/mobile_ll"
                    android:id="@+id/email_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_profile_item_background_drawable"
                    android:layout_margin="5dp">

                    <TextView
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/cust_profile_email"
                        android:text="Email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_profile_tittle_background_drawable"/>

                    <EditText
                        android:id="@+id/cust_profile_email_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="textWebEmailAddress"
                        android:hint="email"
                        android:background="@null"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:lines="1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/email_ll"
                    android:id="@+id/password_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_profile_item_background_drawable"
                    android:layout_margin="5dp">

                    <TextView
                        android:textSize="18sp"
                        android:id="@+id/cust_profile_password"
                        android:text="Password"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cust_profile_tittle_background_drawable"/>

                    <EditText
                        android:id="@+id/cust_profile_password_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:lines="1"
                        />
                </LinearLayout>


                <Button
                    android:layout_below="@+id/password_ll"
                    android:id="@+id/cust_profile_save_bt"
                    android:text="save"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/drawer_items_background_drawable"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <fragment
            android:id="@+id/drawer_frag"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:name="com.example.aman.zwan.fragments.DrawerFragment"/>

    </android.support.v4.widget.DrawerLayout>



</RelativeLayout>
